<p id="notice"><%= notice %></p>

<h1>Movies News</h1>

<div class="table-responsive">
<table class="table">
<table>
  

  <tbody>
    <% @news.each do |news| %>
      <tr>
        
        <td><%= image_tag news.image.url(:medium) %></td>
        <td><strong><%= news.title %></strong></td>

        
        <td><strong><%= link_to 'Show', news ,class: "button" %></strong></td>
        <td><%= link_to 'Edit', edit_news_path(news) %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New News', new_news_path %>
